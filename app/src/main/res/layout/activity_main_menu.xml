<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainMenu">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera-Based AR"
        android:id="@+id/ARButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:onClick="openAR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2D Map"
        android:id="@+id/MapButton"
        android:layout_below="@+id/ARButton"
        android:layout_alignLeft="@+id/ARButton"
        android:layout_alignStart="@+id/ARButton"
        android:layout_marginTop="63dp"
        android:layout_alignRight="@+id/ARButton"
        android:layout_alignEnd="@+id/ARButton"

        android:onClick="openHelp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help Me!"
        android:id="@+id/HelpButton"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/MapButton"
        android:layout_alignStart="@+id/MapButton"
        android:layout_alignRight="@+id/MapButton"
        android:layout_alignEnd="@+id/MapButton"

        android:onClick="openHelp" />
</RelativeLayout>
